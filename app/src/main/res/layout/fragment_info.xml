<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_normal"
        tools:background="@color/colorPrimary">

        <TextView
            android:id="@+id/title"
            style="@style/TextViewHeader"
            android:layout_marginTop="@dimen/margin_huge"
            android:text="@string/app_name"
            app:layout_constraintBottom_toTopOf="@id/version"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/version"
            style="@style/TextViewHeaderSmall"
            android:layout_marginTop="@dimen/margin_tiny"
            android:gravity="center"
            android:text="@string/app_version"
            app:layout_constraintBottom_toTopOf="@id/versionInfo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title" />

        <TextView
            android:id="@+id/versionInfo"
            style="@style/TextViewBody"
            android:layout_marginTop="@dimen/margin_normal"
            android:text="@string/info.body.text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/version" />

        <TextView
            android:id="@+id/labelSupport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_huge"
            android:drawableLeft="@drawable/ic_btctip"
            android:drawablePadding="@dimen/margin_atomic"
            android:drawableTint="@color/colorAccent"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:text="@string/info.label.support_this_project"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/versionInfo" />

        <TextView
            android:id="@+id/labelSupportText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_atomic"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:text="@string/info.donate.support_text"
            android:textColor="@color/white_54"
            android:textSize="@dimen/font_tiny"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelSupport" />


        <TextView
            android:id="@+id/btcTip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:drawableRight="@drawable/ic_copy"
            android:drawablePadding="@dimen/margin_small"
            android:drawableTint="@color/colorAccent"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:text="BTC\n14pHRnhRywZD2oQdxpq5iRUvUqTNPNtWem"
            android:textColor="@color/white_87"
            android:textSize="@dimen/font_tiny"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelSupportText" />

        <TextView
            android:id="@+id/ltcTip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:drawableRight="@drawable/ic_copy"
            android:drawablePadding="@dimen/margin_small"
            android:drawableTint="@color/colorAccent"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:text="LTC\nLfXPhP9FfNUrxP8dS8tVrrVkBhENqzJjxa"
            android:textColor="@color/white_87"
            android:textSize="@dimen/font_tiny"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btcTip" />

        <TextView
            android:id="@+id/dogeTip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:drawableRight="@drawable/ic_copy"
            android:drawablePadding="@dimen/margin_small"
            android:drawableTint="@color/colorAccent"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:text="DOGE\nDHCEMEDcz947RcVLjxqsciQjQuqWdEBgsc"
            android:textColor="@color/white_87"
            android:textSize="@dimen/font_tiny"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ltcTip" />

        <TextView
            android:id="@+id/xrpTip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:drawableRight="@drawable/ic_copy"
            android:drawablePadding="@dimen/margin_small"
            android:drawableTint="@color/colorAccent"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:text="XRP\n   Address:\n   rEb8TK3gBgk5auZkwc6sHnwrGVJH8DuaLh"
            android:textColor="@color/white_87"
            android:textSize="@dimen/font_tiny"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dogeTip" />

        <TextView
            android:id="@+id/xrpTagTip"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_copy"
            android:drawablePadding="@dimen/margin_small"
            android:drawableTint="@color/colorAccent"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:text="   Tag:\n   103799196"
            android:textColor="@color/white_87"
            android:textSize="@dimen/font_tiny"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/xrpTip" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/exIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="@dimen/margin_huge"
            android:tint="@color/colorAccent"
            app:layout_constraintEnd_toStartOf="@id/labelExchanges"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/xrpTagTip"
            app:srcCompat="@drawable/exchange" />

        <TextView
            android:id="@+id/labelExchanges"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/margin_atomic"
            android:drawableTint="@color/colorAccent"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_atomic"
            android:text="@string/info.label.listed_exchanges"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/exIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/exIcon"
            app:layout_constraintTop_toTopOf="@id/exIcon" />

        <TextView
            android:id="@+id/exchangesValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_atomic"
            android:fontFamily="@font/regular"
            android:text="Binance, Bittrex, Cryptopia"
            android:textColor="@color/white_54"
            android:textSize="@dimen/font_tiny"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelExchanges" />

        <TextView
            android:id="@+id/labelFeatures"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_huge"
            android:drawableLeft="@drawable/ic_volume"
            android:drawablePadding="@dimen/margin_atomic"
            android:drawableTint="@color/colorAccent"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_atomic"
            android:text="Upcoming Features"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/exchangesValue" />

        <TextView
            android:id="@+id/featuresValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_atomic"
            android:fontFamily="@font/regular"
            android:text="- Arbitrage Bots"
            android:textColor="@color/white_54"
            android:textSize="@dimen/font_tiny"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelFeatures" />


    </android.support.constraint.ConstraintLayout>

</ScrollView>
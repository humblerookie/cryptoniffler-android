<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:paddingBottom="?android:attr/actionBarSize">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:attr/actionBarSize"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp8"
        android:paddingLeft="@dimen/dp16"
        android:paddingRight="@dimen/dp16"
        android:paddingTop="@dimen/dp8"
        tools:context="com.bariski.cryptoniffler.presentation.main.MainActivity">

        <TextView
            style="@style/TextBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_huge"
            android:text="@string/common.label.i_am_looking" />

        <android.support.v7.widget.CardView
            android:id="@+id/buyAndSellCrypto"
            style="@style/CardNormal"
            android:layout_marginTop="@dimen/margin_normal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_normal">

                <android.support.v7.widget.AppCompatImageView
                    style="@style/IconNormal"
                    android:src="@drawable/bs"
                    android:tint="@color/colorPrimary" />

                <TextView
                    style="@style/TextNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/common.label.buynsell_cryptocurrency"
                    android:textColor="@color/black_87" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/viewExchanges"
            style="@style/CardNormal"
            android:layout_marginTop="@dimen/margin_normal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/margin_normal">

                <android.support.v7.widget.AppCompatImageView
                    style="@style/IconNormal"
                    android:src="@drawable/exchange"
                    android:tint="@color/colorPrimary" />

                <TextView
                    style="@style/TextNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_large"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/common.label.view_exchanges"
                    android:textColor="@color/black_87" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
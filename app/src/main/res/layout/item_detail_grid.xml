<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/margin_small">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/itemIcon"
                style="@style/IconGridNoBorder"
                android:layout_centerVertical="true"
                tools:src="@drawable/buy" />

            <TextView
                android:id="@+id/itemName"
                style="@style/TextMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_toEndOf="@+id/itemIcon"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black_87"
                tools:text="Bitcoin\nsdadaddasdjd" />

            <TextView
                android:id="@+id/itemPrice"
                style="@style/TextNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemName"
                android:layout_marginStart="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_atomic"
                android:layout_toEndOf="@+id/itemIcon"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/black_54"
                android:textSize="@dimen/font_small"
                tools:text="Rs. 20000000000000000000000\n0000000000" />

        </RelativeLayout>

        <me.grantland.widget.AutofitTextView
            android:id="@+id/itemSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:fontFamily="@font/regular"
            android:maxLines="4"
            android:textColor="@color/black_24"
            android:textSize="@dimen/font_normal"
            app:minTextSize="8sp"
            app:sizeToFit="true"
            tools:text="Selling 10% above market\n rate" />

    </LinearLayout>

</android.support.v7.widget.CardView>
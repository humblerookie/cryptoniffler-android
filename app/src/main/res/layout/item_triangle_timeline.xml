<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_huge"
    android:layout_marginRight="@dimen/margin_huge"
    android:layout_marginTop="@dimen/margin_small">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="350dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_normal"
            android:background="@color/black_08"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_small"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="@dimen/margin_small">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medium"
                    android:text="@string/arbitrage.label.trade_amount"
                    android:textColor="@color/primary_54"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medium"
                    android:textColor="@color/primary_87"
                    android:textSize="16sp"
                    tools:text="10000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medium"
                    android:text="@string/arbitrage.label.total_fees"
                    android:textColor="@color/red_400"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/fees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medium"
                    android:textColor="@color/red_700"
                    android:textSize="16sp"
                    tools:text="100" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medium"
                    android:text="@string/arbitrage.label.profit"
                    android:textColor="@color/green_400"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/profit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medium"
                    android:textColor="@color/green_700"
                    android:textSize="16sp"
                    tools:text="10000" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ex1"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/circle_strip_grey"
                android:padding="1dp" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/coin1"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_alignBottom="@id/ex1"
                android:layout_alignRight="@id/ex1"
                android:background="@drawable/circle_strip_grey"
                android:padding="1dp" />

            <TextView
                android:id="@+id/summary1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_toRightOf="@id/ex1"
                android:fontFamily="@font/regular"
                android:textColor="@color/black_54"
                android:textSize="12sp"
                tools:text="Buy XRP at Rs. 10 from Koinex" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_marginLeft="40dp"
            android:background="@color/black_08" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ex2"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/circle_strip_grey"
                android:padding="1dp" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/coin2_2"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_alignBottom="@id/ex2"
                android:layout_alignRight="@id/ex2"
                android:background="@drawable/circle_strip_grey"
                android:padding="1dp" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/coin2_1"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_alignBottom="@id/ex2"
                android:layout_alignLeft="@id/ex2"
                android:background="@drawable/circle_strip_grey"
                android:padding="1dp" />

            <TextView
                android:id="@+id/summary2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_toRightOf="@id/ex2"
                android:fontFamily="@font/regular"
                android:textColor="@color/black_54"
                android:textSize="12sp"
                tools:text="Buy XRP at Rs. 10 from Koinex" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_marginLeft="40dp"
            android:background="@color/black_08" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp16"
            android:paddingRight="@dimen/dp16">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/ex3"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/circle_strip_grey"
                android:padding="1dp" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/coin3"
                android:layout_width="@dimen/dp20"
                android:layout_height="@dimen/dp20"
                android:layout_alignBottom="@id/ex3"
                android:layout_alignRight="@id/ex3"
                android:background="@drawable/circle_strip_grey"
                android:padding="1dp" />

            <TextView
                android:id="@+id/summary3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_normal"
                android:layout_toRightOf="@id/ex3"
                android:fontFamily="@font/regular"
                android:textColor="@color/black_54"
                android:textSize="12sp"
                tools:text="Buy XRP at Rs. 10 from Koinex" />
        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
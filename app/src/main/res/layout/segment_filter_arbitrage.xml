<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_normal"
        android:paddingTop="@dimen/margin_small"
        android:paddingRight="@dimen/margin_normal"
        android:paddingBottom="@dimen/margin_small">

        <TextView
            android:id="@+id/fromTitle"
            style="@style/TextMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/common.label.filter_from"
            android:textAllCaps="true"
            android:textColor="@color/white_87" />


        <TextView
            android:id="@+id/toTitle"
            style="@style/TextMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/common.label.filter_to"
            android:textAllCaps="true"
            android:textColor="@color/white_87" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="@dimen/margin_small"
        android:background="@color/white">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fromList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingTop="@dimen/margin_normal"
            android:paddingRight="@dimen/margin_atomic"
            android:paddingBottom="@dimen/margin_normal" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/toList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_left"
            android:clipToPadding="false"
            android:paddingLeft="@dimen/margin_atomic"
            android:paddingTop="@dimen/margin_normal"
            android:paddingBottom="@dimen/margin_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/clearFilter"
            style="@style/TextMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/background_ripple_grey"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="@dimen/margin_small"
            android:paddingTop="@dimen/margin_tiny"
            android:paddingRight="@dimen/margin_small"
            android:paddingBottom="@dimen/margin_tiny"
            android:text="@string/common.label.clear_all"
            android:textAllCaps="true"
            android:textColor="@color/white_87" />

        <TextView
            android:id="@+id/apply"
            style="@style/TextMedium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/amber_700"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:paddingTop="@dimen/margin_tiny"
            android:paddingBottom="@dimen/margin_tiny"
            android:text="@string/common.label.apply"
            android:textAllCaps="true"
            android:textColor="@color/white_87" />
    </LinearLayout>
</LinearLayout>